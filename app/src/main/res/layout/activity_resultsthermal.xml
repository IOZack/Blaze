<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@xml/backframe"
    tools:context="com.example.zack.pismire.resultsthermal">

    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:columnCount="2"
            android:rowCount="15"
            android:layout_gravity="bottom"
            android:focusableInTouchMode="true">


            <ImageView
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@drawable/logo2"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp" />

            <ImageView
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@drawable/sep"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_column="0"
                android:layout_row="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/meter"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:layout_rowSpan="2" />

            <TextView
                android:layout_column="1"
                android:layout_row="3"
                android:hint=""
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="15dp"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginTop="7dp"
                android:text="42 Celsius" />

            <TextView
                android:layout_column="1"
                android:layout_row="4"
                android:hint="Current Temperature"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginLeft="15dp" />

            <ImageView
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="5"
                android:background="@drawable/sep"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />


            <ImageView
                android:layout_column="0"
                android:layout_row="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/meter"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:layout_rowSpan="2" />

            <TextView
                android:layout_column="1"
                android:layout_row="6"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="15dp"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginTop="7dp"
                android:autoText="true"
                android:text="37 Celsius" />

            <TextView
                android:layout_column="1"
                android:layout_row="7"
                android:hint="Corrent Temperature"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginLeft="15dp" />

            <ImageView
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="8"
                android:background="@drawable/sep"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />


            <ImageView
                android:layout_column="0"
                android:layout_row="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recommend"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp" />

            <TextView
                android:layout_column="1"
                android:layout_row="9"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="15dp"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:layout_gravity="left|center_horizontal"
                android:autoText="true"
                android:text="Reccomendation"
                android:layout_marginTop="14dp" />

            <ImageView
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="10"
                android:background="@drawable/sep"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />


            <ImageView
                android:layout_column="0"
                android:layout_row="11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vest"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="80dp" />

            <TextView
                android:layout_column="1"
                android:layout_row="11"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:layout_gravity="left|center_horizontal"
                android:autoText="true"
                android:text="Take off 1 layer of cotton"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="-30dp" />


        </GridLayout>

    </RelativeLayout>

</ScrollView>
