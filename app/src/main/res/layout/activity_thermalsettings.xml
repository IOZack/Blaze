<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@xml/backframe"
    tools:context="com.example.zack.pismire.thermalsettings">

    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:columnCount="2"
            android:rowCount="15"
            android:layout_gravity="bottom"
            android:focusableInTouchMode="true">


            <ImageView
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@drawable/logo2"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp" />

            <ImageView
                android:layout_column="0"
                android:layout_row="2"
                android:background="@drawable/sep"
                android:scaleType="fitXY"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />


            <TextView
                android:layout_column="1"
                android:layout_row="2"
                android:text="Farmers"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:layout_gravity="left" />

            <TextView
                android:layout_column="0"
                android:layout_row="3"
                android:text="Average Width"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@xml/orangebox"
                android:layout_column="1"
                android:layout_row="3"
                android:hint="Enter width of ground in meters"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="15dp"
                android:textColorHint="#272727"
                android:textColor="#272727"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:paddingRight="20dp" />

            <TextView
                android:layout_column="0"
                android:layout_row="4"
                android:text="Height Width"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@xml/orangebox"
                android:layout_column="1"
                android:layout_row="4"
                android:hint="Enter height of ground in meters"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="15dp"
                android:textColorHint="#272727"
                android:textColor="#272727"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:paddingRight="20dp" />

            <ImageView
                android:layout_column="0"
                android:layout_row="5"
                android:background="@drawable/sep"
                android:scaleType="fitXY"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_column="1"
                android:layout_row="5"
                android:text="Firefighters"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:layout_gravity="left" />

            <TextView
                android:layout_column="0"
                android:layout_row="6"
                android:text="Point Width"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@xml/orangebox"
                android:layout_column="1"
                android:layout_row="6"
                android:hint="Enter width of blaze central point"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="15dp"
                android:textColorHint="#272727"
                android:textColor="#272727"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:paddingRight="20dp" />

            <TextView
                android:layout_column="0"
                android:layout_row="7"
                android:text="Point Height"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@xml/orangebox"
                android:layout_column="1"
                android:layout_row="7"
                android:hint="Enter height of ground in meters"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="15dp"
                android:textColorHint="#272727"
                android:textColor="#272727"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:paddingRight="20dp" />


            <Button
                android:id="@+id/savechanges"
                android:background="@xml/save"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_row="8"
                android:textColor="#230000"
                android:text="Save"
                android:paddingLeft="40dp"
                android:drawableLeft="@drawable/save"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_height="50dp"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:paddingRight="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

        </GridLayout>

    </RelativeLayout>

</ScrollView>
