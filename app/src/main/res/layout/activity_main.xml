<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@xml/backframe"
    tools:context=".MainActivity">

    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:columnCount="2"
        android:rowCount="15"
        android:layout_gravity="bottom"
        android:focusableInTouchMode="true">

        <Button
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_row="0"
            android:textAllCaps="false"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:drawablePadding="-20dp"
            android:drawableLeft="@drawable/settings"
            android:id="@+id/settingbtn"
            android:background="@xml/settings"
            android:paddingLeft="15dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="40dp"
            android:text="Settings"
            android:textColor="#272727" />

        <ImageView
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/logo2"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Science evolved, and proved that the most efficient way to solve a problem is to tackle its roots."
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#ffffff"
            android:singleLine="false"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_row="4"
            android:background="@drawable/sep"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Based on this, Blaze was designed and developed to help fire fighters and farmers and many more"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="#ffffff"
            android:singleLine="false"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_row="6"
            android:background="@drawable/sep"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fire fighters and farmers use Blaze to take smarter actions on either knocking down fire or maintaining crops efficiently"
            android:layout_row="7"
            android:layout_column="0"
            android:textColor="#ffffff"
            android:singleLine="false"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/farmer"
            android:background="@xml/farmer"
            android:layout_column="0"
            android:layout_row="8"
            android:textColor="#272727"
            android:text="Farmer"
            android:paddingRight="19dp"
            android:drawableRight="@drawable/start"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginRight="0dp" />

        <Button
            android:id="@+id/firefighter"
            android:background="@xml/fighter"
            android:layout_column="1"
            android:layout_row="8"
            android:textColor="#272727"
            android:text="Firefighter"
            android:paddingLeft="19dp"
            android:drawableLeft="@drawable/start"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_height="50dp"
            android:layout_width="210dp"
            android:layout_marginTop="25dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp" />

    </GridLayout>

    </RelativeLayout>

</ScrollView>
